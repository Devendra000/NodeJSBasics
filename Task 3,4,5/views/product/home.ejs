<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Home</title>
</head>
<body>
    <div class="sort">
        <a href="http://localhost:4000/product/sort">Sort in descending price</a>
    </div>

    <div class="search">
        <form method="post" action="/product/search">
            <input type="text" name="searchValue" placeholder="Search value">
            <input type="submit" value="Search">
        </form>
    </div>

    <div class="sort">
        <a href="http://localhost:4000/product/stockOut">Out of Stock</a>
    </div>

    <div class="info">
        <table width="40%" border='1px solid black'>
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Description</th>  
                    <th>Quantity</th>  
                    <th>Type</th> 
                </tr>
            </thead>
            <% if(product.length >0){
                for(i = 0; i < product.length; i++){%>
            <tr>
                <td><%= product[i]._id %></td>
                <td><%= product[i].name %></td>
                <td><%= product[i].price %></td>
                <td><%= product[i].description %></td>
                <td><%= product[i].quantity %></td>
                <td><%= product[i].productType %></td>
            </tr>
            <%}} 
            else{ %>
                <td colspan="5">No product to show</td>
                <%}%>
        </table>
    </div>
    <br><br>

    <p>Add product</p>
    <div class="add">
        <form method="post" action="/product/add">
            <input type="text" name="name" placeholder="Name"><br>
            <input type="number" name="price" placeholder="Price"><br>
            <input type="text" name="description" placeholder="Description"><br>
            <input type="number" name="quantity" placeholder="Quantity"><br>
            <input type="text" name="productType" placeholder="Type"><br>
            <input type="submit" value="Add">
        </form>
    </div>
    <br><br>
    
    <p>Update product</p>
    <div class="update">
        <form method="post" action="/product/update">
            <input type="text" name="productId" placeholder="Id"><br>
            <input type="number" name="quantity" placeholder="Quantity"><br>
            <input type="submit" value="Update">
        </form>
    </div>
    <br><br>

     <p>Delete product</p>
    <div class="delete">
        <form method="post" action="/product/delete">
            <input type="text" name="productId" placeholder="Id"><br>
            <input type="submit" value="Delete">
        </form>
    </div>
    <br><br>

</body>
</html>